<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Stile dei messaggi inviati (verde, a destra) -->
    <Style x:Key="SentMessageStyle" TargetType="Border">
        <Setter Property="Background" Value="#DCF8C6"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="Grid.Column" Value="2" />
    </Style>

    <!-- Stile dei messaggi ricevuti (grigio, a sinistra) -->
    <Style x:Key="ReceivedMessageStyle" TargetType="Border">
        <Setter Property="Background" Value="#EAEAEA"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Grid.Column" Value="0" />
    </Style>

    <!-- Stile della TextBox del messaggio -->
    <Style x:Key="MessageTextBoxStyle" TargetType="TextBox">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <!-- Stile dei bottoni (Invia e Allega) -->
    <Style x:Key="IconButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Width" Value="40"/>
        <Setter Property="Height" Value="40"/>
    </Style>

</ResourceDictionary>